<!DOCTYPE html>
<html>
  <head>
    <title>将棋SNS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <header class="header">
      <div class="header__bar row">
        <div class="menu-list">
        <span class="shougisns"><%= link_to "将棋SNS", root_path %></span>
        <% if user_signed_in? %>
        <span class="shougisns"><%= link_to "オンラインゲーム会場", games_path(user_id: current_user.id) %></span>

        <span id="current_user.nickname">ログイン者：<%= current_user.nickname %></span>

            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post" %>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
        </div>
      </div>
</header>
  <body>
  
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
